---
import Layout from "../layouts/Base.astro";
import Card from "../components/Card.astro";
import Questions from "../assets/questions.json"
---

<Layout title="Smart Wallet - Inicio" namePage="Preguntas Frecuentes">
  <main class="flex flex-col justify-center items-center gap-3 py-4">
    {Questions.map(({id, pregunta, respuesta}) => (
      <Card key={id} question={pregunta} answer={respuesta} />
    ))}
  </main>
</Layout>