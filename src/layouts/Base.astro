---
const { title, namePage } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#252837] text-white max-w-lg mx-auto h-svh py-10">
    <header class="flex flex-col justify-center items-center h-auto w-full">
      <a href="/home"><img src="/namex.svg" alt="Smart Wallet Logo" /></a>
      <p id="time" class="w-full px-7 font-bold text-lg text-gray-200 mt-3"></p>
      <div class="w-full h-px bg-[#EC7C69] m-1"></div>
      <h1 class="text-2xl font-bold text-gray-200">{namePage}</h1>
    </header>
    <slot />
  </body>
</html>

<script>
  const date = new Date();
  const options = { weekday: "long", day: "numeric", month: "long" };
  const formattedDate = date.toLocaleDateString("es-ES", options);
  document.getElementById("time").textContent = formattedDate;
</script>
